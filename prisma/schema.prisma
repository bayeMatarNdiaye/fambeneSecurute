generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  fullName        String
  company         String?
  email           String
  phone           String?
  subject         String
  message         String
  type            String    @default("CONTACT") // Was Enum LeadType
  status          String    @default("NEW")     // Was Enum LeadStatus
  attachmentName  String?
  attachmentType  String?
  attachmentSize  Int?
  attachmentData  Bytes?
}






